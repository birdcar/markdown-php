{
    "name": "birdcar/markdown-php",
    "description": "Birdcar Flavored Markdown (BFM) â€” league/commonmark extension suite",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "league/commonmark": "^2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0"
    },
    "repositories": [
        { "type": "path", "url": "packages/*" }
    ],
    "autoload": {
        "psr-4": {
            "Birdcar\\Markdown\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Birdcar\\Markdown\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:all": ["@test", "cd packages/laravel && composer test", "cd packages/filament && composer test"],
        "analyse": "phpstan analyse -l 8 src/",
        "analyse:all": ["@analyse", "cd packages/laravel && composer analyse", "cd packages/filament && composer analyse"],
        "format": "php-cs-fixer fix --dry-run --diff"
    },
    "authors": [
        {
            "name": "Nick",
            "email": "nick@birdcar.dev"
        }
    ]
}
